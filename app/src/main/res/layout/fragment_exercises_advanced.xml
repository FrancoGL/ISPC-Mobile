<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.ExercisesAdvancedFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/absAdvancedImg"
            android:layout_width="395dp"
            android:layout_height="85dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/absBeginner"
            android:onClick="getDescription"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/abs" />

        <TextView
            android:id="@+id/absAdvancedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/absAdvanced"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/absAdvancedImg"
            app:layout_constraintEnd_toEndOf="@+id/absAdvancedImg"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="@+id/absAdvancedImg"
            app:layout_constraintTop_toTopOf="@+id/absAdvancedImg"
            app:layout_constraintVertical_bias="0.873" />

        <ImageView
            android:id="@+id/chestAdvancedImg"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/chestBeginner"
            android:onClick="getDescription"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/absAdvancedImg"
            app:layout_constraintVertical_bias="0.008"
            app:srcCompat="@drawable/chest" />

        <TextView
            android:id="@+id/chestAdvancedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chestAdvanced"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/chestAdvancedImg"
            app:layout_constraintEnd_toEndOf="@+id/chestAdvancedImg"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="@+id/chestAdvancedImg"
            app:layout_constraintTop_toTopOf="@+id/chestAdvancedImg"
            app:layout_constraintVertical_bias="0.873" />

        <ImageView
            android:id="@+id/armAdvancedImg"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/armBeginner"
            android:onClick="getDescription"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chestAdvancedImg"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/arm" />

        <TextView
            android:id="@+id/armAdvancedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/armAdvanced"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/armAdvancedImg"
            app:layout_constraintEnd_toEndOf="@+id/armAdvancedImg"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="@+id/armAdvancedImg"
            app:layout_constraintTop_toTopOf="@+id/armAdvancedImg"
            app:layout_constraintVertical_bias="0.873" />

        <ImageView
            android:id="@+id/legAdvancedImg"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/legBeginner"
            android:onClick="getDescription"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/armAdvancedImg"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/leg" />

        <TextView
            android:id="@+id/legAdvancedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/legAdvanced"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/legAdvancedImg"
            app:layout_constraintEnd_toEndOf="@+id/legAdvancedImg"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="@+id/legAdvancedImg"
            app:layout_constraintTop_toTopOf="@+id/legAdvancedImg"
            app:layout_constraintVertical_bias="0.873" />

        <ImageView
            android:id="@+id/backShoulderAdvancedImg"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/backAndShoulderBeginner"
            android:onClick="getDescription"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/legAdvancedImg"
            app:layout_constraintVertical_bias="0.034"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/backShoulderAdvancedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backAndShoulderAdvanced"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/backShoulderAdvancedImg"
            app:layout_constraintEnd_toEndOf="@+id/backShoulderAdvancedImg"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="@+id/backShoulderAdvancedImg"
            app:layout_constraintTop_toTopOf="@+id/backShoulderAdvancedImg"
            app:layout_constraintVertical_bias="0.873" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Ecommerce"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Ecommerce">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_Navigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:textSize="40dp"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:labelVisibilityMode="selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/arrow_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/arrow_return_description"
        android:onClick="returnToExercises"
        android:src="@drawable/baseline_arrow_circle_left_24"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:maxImageSize="68dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />

                <TextView
                    android:id="@+id/TitleEcommerce"
                    android:layout_width="411dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="1dp"
                    android:fontFamily="@font/roboto_medium"

                    android:gravity="center"
                    android:text="@string/titleEcommerce"
                    android:textSize="20dp"
                    app:lineHeight="23dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="21.3dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="328dp"
                    android:layout_height="237dp"
                    android:layout_gravity="center|center_vertical">

                    <ImageView
                        android:id="@+id/PlanBasicPlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@tools:sample/avatars"
                        app:srcCompat="@drawable/ecommerceplanprincipiantes" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Begginerplan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="99dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center|top"
                            android:text="@string/planBasico"
                            android:textColor="#ffffff"
                            android:textSize="24dp"
                            app:lineHeight="23dp" />

                        <TextView
                            android:id="@+id/DescriptionB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center|top"
                            android:text="@string/DescripcionPlanBasico"
                            android:textColor="#F9A826"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/Price"
                                android:layout_width="136dp"
                                android:layout_height="58dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="bottom|left"
                                android:text="@string/precioPbasico"
                                android:textColor="@color/buttonColor"
                                android:textSize="24dp" />

                            <Button
                                android:id="@+id/button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/buttonColor"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/ButtomContratar"
                                android:textColor="#000000"
                                app:cornerRadius="15.5dp" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="21.3dp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="21.3dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="328dp"
                    android:layout_height="237dp"
                    android:layout_gravity="center|center_vertical">

                    <ImageView
                        android:id="@+id/imageplanmedio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@tools:sample/avatars"
                        app:srcCompat="@drawable/ecommerceplanmedio" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Medioplan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="99dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center|top"
                            android:text="@string/planMedio"
                            android:textColor="#ffffff"
                            android:textSize="28dp"
                            app:lineHeight="23dp" />

                        <TextView
                            android:id="@+id/DescriptionM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center|top"
                            android:text="@string/DescripcionPlanMedio"
                            android:textColor="#F9A826"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/PriceM"
                                android:layout_width="136dp"
                                android:layout_height="58dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="bottom|left"
                                android:text="@string/precioPmedio"
                                android:textColor="@color/buttonColor"
                                android:textSize="24dp" />

                            <Button
                                android:id="@+id/button2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/buttonColor"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/ButtomContratar"
                                android:textColor="#000000"
                                app:cornerRadius="15.5dp" />
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="21.3dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="328dp"
                    android:layout_height="237dp"
                    android:layout_gravity="center|center_vertical">

                    <ImageView
                        android:id="@+id/imageplanavanzado"
                        android:layout_width="match_parent"
                        android:layout_height="237dp"
                        android:src="@tools:sample/avatars"
                        app:srcCompat="@drawable/ecommerceplanavanzado" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Avanzplan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="99dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center|top"
                            android:text="@string/planAvanzado"
                            android:textColor="#ffffff"
                            android:textSize="28dp"
                            app:lineHeight="23dp" />

                        <TextView
                            android:id="@+id/DescriptionA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center|top"
                            android:text="@string/DescripcionPlanAvanzado"
                            android:textColor="#F9A826"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/PriceA"
                                android:layout_width="136dp"
                                android:layout_height="58dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="bottom|left"
                                android:text="@string/precioPavanzado"
                                android:textColor="@color/buttonColor"
                                android:textSize="24dp" />

                            <Button
                                android:id="@+id/button3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/buttonColor"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/ButtomContratar"
                                android:textColor="#000000"
                                app:cornerRadius="15.5dp" />
                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
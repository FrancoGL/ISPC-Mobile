<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Ecommerce"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Ecommerce">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="60dp"
                    android:src="@tools:sample/avatars"
                    app:srcCompat="@drawable/baseline_arrow_circle_left_24" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="21.3dp" />

                <TextView
                    android:id="@+id/TitleEcommerce"
                    android:layout_width="411dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="1dp"
                    android:fontFamily="@font/roboto_medium"

                    android:gravity="center"
                    android:text="@string/TitleEcommerce"
                    android:textSize="20dp"
                    app:lineHeight="23dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="21.3dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="328dp"
                    android:layout_height="237dp"
                    android:layout_gravity="center|center_vertical">

                    <ImageView
                        android:id="@+id/PlanBasicPlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@tools:sample/avatars"
                        app:srcCompat="@drawable/ecommerceplanprincipiantes" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Begginerplan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="99dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center|top"
                            android:text="@string/TitlePbasic"
                            android:textColor="#ffffff"
                            android:textSize="24dp"
                            app:lineHeight="23dp" />

                        <TextView
                            android:id="@+id/DescriptionB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center|top"
                            android:text="@string/DescriptionPB"
                            android:textColor="#F9A826"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/Price"
                                android:layout_width="136dp"
                                android:layout_height="58dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="bottom|left"
                                android:text="@string/Price"
                                android:textColor="@color/buttonColor"
                                android:textSize="24dp" />

                            <Button
                                android:id="@+id/button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/buttonColor"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Contratar"
                                android:textColor="#000000"
                                app:cornerRadius="15.5dp" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="21.3dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="21.3dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="328dp"
                    android:layout_height="237dp"
                    android:layout_gravity="center|center_vertical">

                    <ImageButton
                        android:id="@+id/Planmedioimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ecommerceplanmedio" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Medioplan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="99dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center|top"
                            android:text="@string/TitlePlanM"
                            android:textColor="#ffffff"
                            android:textSize="28dp"
                            app:lineHeight="23dp" />

                        <TextView
                            android:id="@+id/DescriptionM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center|top"
                            android:text="@string/DescriptionPM"
                            android:textColor="#F9A826"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/PriceM"
                                android:layout_width="136dp"
                                android:layout_height="58dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="bottom|left"
                                android:text="@string/PriceM"
                                android:textColor="@color/buttonColor"
                                android:textSize="24dp" />

                            <Button
                                android:id="@+id/button2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/buttonColor"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Contratar"
                                android:textColor="#000000"
                                app:cornerRadius="15.5dp" />
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="21.3dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="328dp"
                    android:layout_height="237dp"
                    android:layout_gravity="center|center_vertical">

                    <ImageButton
                        android:id="@+id/Planavanzadoimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ecommerceplanavanzado" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Avanzplan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="99dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center|top"
                            android:text="@string/TitlePlanA"
                            android:textColor="#ffffff"
                            android:textSize="28dp"
                            app:lineHeight="23dp" />

                        <TextView
                            android:id="@+id/DescriptionA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center|top"
                            android:text="@string/DescriptionPA"
                            android:textColor="#F9A826"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/PriceA"
                                android:layout_width="136dp"
                                android:layout_height="58dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="bottom|left"
                                android:text="@string/PriceM"
                                android:textColor="@color/buttonColor"
                                android:textSize="24dp" />

                            <Button
                                android:id="@+id/button3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/buttonColor"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Contratar"
                                android:textColor="#000000"
                                app:cornerRadius="15.5dp" />
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>